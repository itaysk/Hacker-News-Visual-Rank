{
    "manifest_version": 2,
    "name": "Hacker News Visual Rank",
    "description": "Visually emphasize stories on HN by changing font size according to the number of points (upvotes) and comments",
    "author": "Itay Shakury",
    "homepage_url": "https://github.com/itaysk/Hacker-News-Visual-Rank",
    "icons": {
        "16":"icon16.png",
        "48":"icon48.png",
        "128": "icon128.png"
    },
    "version": "1.0",
    "content_scripts": [
        {
            "matches": [
                "https://news.ycombinator.com/"
            ],
            "css": [],
            "js": [
                "script.js"
            ]
        }
    ]
}